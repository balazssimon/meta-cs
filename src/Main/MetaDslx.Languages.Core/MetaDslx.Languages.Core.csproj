<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\Versions.props" />
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>MetaDslx.Languages</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
    <MetaDslxDisableMetaModelGenerator>false</MetaDslxDisableMetaModelGenerator>
    <MetaDslxDisableAntlr4RoslynGenerator>false</MetaDslxDisableAntlr4RoslynGenerator>
    <MetaDslxDisableSymbolSourceGenerator>false</MetaDslxDisableSymbolSourceGenerator>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>Generated</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MetaDslx.BuildTasks" Version="$(BootstrapVersion)" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MetaDslx.CodeAnalysis.Antlr4\MetaDslx.CodeAnalysis.Antlr4.csproj" />
    <ProjectReference Include="..\MetaDslx.CodeAnalysis.Meta\MetaDslx.CodeAnalysis.Meta.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Antlr4Roslyn Update="Compiler\Syntax\InternalSyntax\CompilerLexer.ag4">
      <AutomaticOutputLocation>ManualOutputDirectory</AutomaticOutputLocation>
    </Antlr4Roslyn>
    <Antlr4Roslyn Update="Compiler\Syntax\InternalSyntax\CompilerParser.ag4">
      <AutomaticOutputLocation>ManualOutputDirectory</AutomaticOutputLocation>
    </Antlr4Roslyn>
    <Antlr4Roslyn Update="Core\Syntax\InternalSyntax\CoreLexer.ag4">
      <AutomaticOutputLocation>ManualOutputDirectory</AutomaticOutputLocation>
    </Antlr4Roslyn>
    <Antlr4Roslyn Update="Core\Syntax\InternalSyntax\CoreParser.ag4">
      <AutomaticOutputLocation>ManualOutputDirectory</AutomaticOutputLocation>
    </Antlr4Roslyn>
  </ItemGroup>

  <ItemGroup>
    <MetaModel Update="Compiler\Model\Compiler.mm">
      <AutomaticOutputLocation>ManualOutputDirectory</AutomaticOutputLocation>
    </MetaModel>
    <MetaModel Update="Core\Model\Core.mm">
      <AutomaticOutputLocation>ManualOutputDirectory</AutomaticOutputLocation>
    </MetaModel>
  </ItemGroup>
</Project>
