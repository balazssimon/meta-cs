<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\Versions.props" />
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>MetaDslx.Languages.Meta</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <TargetFramework>netstandard2.0</TargetFramework>
    <NoStdLib>true</NoStdLib>
    <ApplyNgenOptimization>partial</ApplyNgenOptimization>
    <IsPackable>false</IsPackable>
    <MetaDslxDisableAntlr4RoslynGenerator>true</MetaDslxDisableAntlr4RoslynGenerator>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Binding\BoundDocumentation.cs" />
    <Compile Remove="Binding\BoundOpposite.cs" />
    <Compile Remove="Binding\MetaBoundKind.cs" />
    <Compile Remove="Binding\MetaBoundNodeFactoryVisitor.cs" />
    <Compile Remove="Binding\MetaIsBindableNodeVisitor.cs" />
  </ItemGroup>

  <!--ItemGroup>
    <PackageReference Include="MetaDslx.BuildTasks" Version="$(BootstrapVersion)" PrivateAssets="all" />
    <PackageReference Include="MetaDslx.CodeAnalysis.Analyzers" Version="$(BootstrapVersion)" PrivateAssets="all" />
  </ItemGroup-->
  
  <ItemGroup>
    <ProjectReference Include="..\MetaDslx.CodeAnalysis.Antlr4\MetaDslx.CodeAnalysis.Antlr4.csproj" />
    <ProjectReference Include="..\MetaDslx.CodeAnalysis.Meta\MetaDslx.CodeAnalysis.Meta.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Antlr4Roslyn Update="Syntax\InternalSyntax\MetaLexer.ag4">
      <AutomaticOutputLocation>ManualOutputDirectory</AutomaticOutputLocation>
    </Antlr4Roslyn>
    <Antlr4Roslyn Update="Syntax\InternalSyntax\MetaParser.ag4">
      <AutomaticOutputLocation>ManualOutputDirectory</AutomaticOutputLocation>
  </Antlr4Roslyn>
  </ItemGroup>

</Project>
