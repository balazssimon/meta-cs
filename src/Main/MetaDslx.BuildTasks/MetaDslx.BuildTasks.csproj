<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\Versions.props" />

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>MetaDslx.BuildTasks</RootNamespace>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <NoStdLib>true</NoStdLib>
    <ApplyNgenOptimization>partial</ApplyNgenOptimization>
    <LangVersion>preview</LangVersion>

    <!-- NuGet -->
    <IsPackable>true</IsPackable>
    <PackageId>MetaDslx.BuildTasks</PackageId>
    <PackageDescription>
      MSBuild tooling for the MetaDslx metamodeling platform.
    </PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework" Version="$(MicrosoftBuildVersion)" PrivateAssets="All"/>
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="$(MicrosoftBuildVersion)" PrivateAssets="All"/>
    <PackageReference Include="System.Collections.Immutable" Version="$(SystemCollectionsImmutableVersion)" PrivateAssets="All"/>
    <PackageReference Include="System.Memory" Version="$(SystemMemoryVersion)" PrivateAssets="All"/>
    <PackageReference Include="System.Reflection.Metadata" Version="$(SystemReflectionMetadataVersion)" PrivateAssets="All"/>
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="$(SystemRuntimeCompilerServicesUnsafeVersion)" PrivateAssets="All"/>
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="$(SystemThreadingTasksExtensionsVersion)" PrivateAssets="All"/>
    <PackageReference Include="System.Text.Encoding.CodePages" Version="$(SystemTextEncodingCodePagesVersion)" PrivateAssets="All"/>
    <PackageReference Include="Antlr4.Runtime" Version="$(Antlr4Version)" PrivateAssets="All"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MetaDslx.CodeAnalysis.Common\MetaDslx.CodeAnalysis.Common.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\MetaDslx.CodeAnalysis.CSharp\MetaDslx.CodeAnalysis.CSharp.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\MetaDslx.Core\MetaDslx.Core.csproj" PrivateAssets="all" />
    <ProjectReference Include="..\MetaDslx.CodeAnalysis.Antlr4\MetaDslx.CodeAnalysis.Antlr4.csproj" PrivateAssets="all" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="MetaDslx.ProjectItemsSchema.xml" Pack="true" PackagePath="build" CopyToOutputDirectory="PreserveNewest"/>
    <None Include="MetaGenerator.xml" Pack="true" PackagePath="build" CopyToOutputDirectory="PreserveNewest"/>
    <None Include="MetaModel.xml" Pack="true" PackagePath="build" CopyToOutputDirectory="PreserveNewest"/>
    <None Include="Antlr4Roslyn.xml" Pack="true" PackagePath="build" CopyToOutputDirectory="PreserveNewest"/>
  </ItemGroup>

  <ItemGroup>
    <None Include="MetaDslx.BuildTasks.DefaultItems.props" Pack="true" PackagePath="build" CopyToOutputDirectory="PreserveNewest"/>
    <None Include="MetaDslx.BuildTasks.DefaultItems.targets" Pack="true" PackagePath="build" CopyToOutputDirectory="PreserveNewest"/>
    <None Include="MetaDslx.BuildTasks.props" Pack="true" PackagePath="build" CopyToOutputDirectory="PreserveNewest"/>
    <None Include="MetaDslx.BuildTasks.targets" Pack="true" PackagePath="build" CopyToOutputDirectory="PreserveNewest"/>
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <None Include="bin\Debug\netstandard2.0\MetaDslx.CodeAnalysis.Common.dll" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="bin\Debug\netstandard2.0\MetaDslx.CodeAnalysis.CSharp.dll" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="bin\Debug\netstandard2.0\MetaDslx.Core.dll" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="bin\Debug\netstandard2.0\MetaDslx.CodeAnalysis.Antlr4.dll" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="$(NuGetPackageRoot)\antlr4.runtime\$(Antlr4Version)\lib\netstandard1.1\Antlr4.Runtime.dll" Condition="!Exists('$(NuGetPackageRoot)\antlr4.runtime\$(Antlr4Version)\lib\netstandard2.0\Antlr4.Runtime.dll')" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="$(NuGetPackageRoot)\antlr4.runtime\$(Antlr4Version)\lib\netstandard2.0\Antlr4.Runtime.dll" Condition="Exists('$(NuGetPackageRoot)\antlr4.runtime\$(Antlr4Version)\lib\netstandard2.0\Antlr4.Runtime.dll')" Pack="true" PackagePath="lib\netstandard2.0"/>

    <None Include="bin\Debug\net461\MetaDslx.CodeAnalysis.Common.dll" Pack="true" PackagePath="lib\net461"/>
    <None Include="bin\Debug\net461\MetaDslx.CodeAnalysis.CSharp.dll" Pack="true" PackagePath="lib\net461"/>
    <None Include="bin\Debug\net461\MetaDslx.Core.dll" Pack="true" PackagePath="lib\net461"/>
    <None Include="bin\Debug\net461\MetaDslx.CodeAnalysis.Antlr4.dll" Pack="true" PackagePath="lib\net461"/>
    <None Include="bin\Debug\net461\Antlr4.Runtime.dll" Pack="true" PackagePath="lib\net461"/>
  </ItemGroup>

  <ItemGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <None Include="bin\Release\netstandard2.0\MetaDslx.CodeAnalysis.Common.dll" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="bin\Release\netstandard2.0\MetaDslx.CodeAnalysis.CSharp.dll" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="bin\Release\netstandard2.0\MetaDslx.Core.dll" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="bin\Release\netstandard2.0\MetaDslx.CodeAnalysis.Antlr4.dll" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="$(NuGetPackageRoot)\antlr4.runtime\$(Antlr4Version)\lib\netstandard1.1\Antlr4.Runtime.dll" Condition="!Exists('$(NuGetPackageRoot)\antlr4.runtime\$(Antlr4Version)\lib\netstandard2.0\Antlr4.Runtime.dll')" Pack="true" PackagePath="lib\netstandard2.0"/>
    <None Include="$(NuGetPackageRoot)\antlr4.runtime\$(Antlr4Version)\lib\netstandard2.0\Antlr4.Runtime.dll" Condition="Exists('$(NuGetPackageRoot)\antlr4.runtime\$(Antlr4Version)\lib\netstandard2.0\Antlr4.Runtime.dll')" Pack="true" PackagePath="lib\netstandard2.0"/>

    <None Include="bin\Release\net461\MetaDslx.CodeAnalysis.Common.dll" Pack="true" PackagePath="lib\net461"/>
    <None Include="bin\Release\net461\MetaDslx.CodeAnalysis.CSharp.dll" Pack="true" PackagePath="lib\net461"/>
    <None Include="bin\Release\net461\MetaDslx.Core.dll" Pack="true" PackagePath="lib\net461"/>
    <None Include="bin\Release\net461\MetaDslx.CodeAnalysis.Antlr4.dll" Pack="true" PackagePath="lib\net461"/>
    <None Include="bin\Release\net461\Antlr4.Runtime.dll" Pack="true" PackagePath="lib\net461"/>
  </ItemGroup>
</Project>
